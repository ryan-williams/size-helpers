
defn dush dus -h
defn dsh dus -h
defn db du -b
defn dub du -b

du_sh_cwd() {
    du -sh .[!.]* * | sort -h
}
export -f du_sh_cwd
defn dsh. du_sh_cwd

defn ts total-size -h
defn tsr total-size

defn dts disk-tree
disk_tree_tail() {
    disk_tree.sh | tail "$@"
}
export -f disk_tree_tail
defn dtt disk_tree_tail

to_gb() {
    numfmt --to-unit G --round nearest "$@"
    # awk "{printf "%.2f GB\n", $1/1024/1024/1024}"
}
export -f to_gb

dush_txt() {
    if [ $# -eq 0 ]; then
        dir=.
    elif [ $# -eq 1 ]; then
        dir="$1"
    else
        echo "Usage: dush_txt [dir]" >&2
        return 1
    fi
    find "$dir" -maxdepth 1 | rv '^\.$' | p 'du -sh' | sort -hk1 | tee "$dir/dush.txt"
}
export -f dush_txt
alias dsht=dush_txt
